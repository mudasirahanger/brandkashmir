{{ header }}


<section class="pt-12 pb-2 d-flex align-items-end lighter-overlay bg-cover">
  <div class="container overlay-content">
    <div class="d-flex justify-content-between align-items-start flex-column flex-lg-row align-items-lg-end">
      <div class="text-white mt-5 mb-lg-0">
        <img class="pb-4 img-fluid" src="https://www.malaysia.travel/img/placer/sub-title-3.png">
        <p class="subtitle text-muted mb-0">Don't let these offers get away and save more!
        </p>
      </div>
    </div>
  </div>
</section>


<section class="py-5">
  <div id="product-category" class="container">

    <div class="row">{{ column_left }}
      {% if column_left and column_right %}
      {% set class = 'col-sm-6' %}
      {% elseif column_left or column_right %}
      {% set class = 'col-sm-9' %}
      {% else %}
      {% set class = 'col-sm-12' %}
      {% endif %}
      <div id="content" class="{{ class }}">{{ content_top }}

        {% if products %}
        <div class="col-lg-9">
          <div class="pt-5">
            <div class="container">
              <div class="row mb-4">
                <div class="col-md-12">
                  <h3> {{ heading_title }} </h3>
                </div>
              </div>
              <div class="row"> {% for product in products %}

                <div class="col-sm-6 col-xl-4 mb-5 hover-border">
                  <!-- package item-->
                  <div class="card h-100">
                    <div class="ribbon ribbon-dark text-uppercase text-dark" style="font-size: 9px; background-color: #1FBC9C !important;">
                      #pakejduriantourism</div>

                    <div class="w-100 p-2">
                      <div class="embed-responsive embed-responsive-1by1">
                        <img alt="" class="card-img-top embed-responsive-item rounded" src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}"><a class="tile-link" href="{{ product.href }}"></a>
                      </div>
                    </div>
                    <div class="card-body d-flex flex-column align-items-center">
                      <div class="w-100">
                        <div class="d-flex card-subtitle mb-1">
                          <p class="flex-grow-1 mb-0 text-muted text-sm">{{ product.name }}</p>
                        </div>
                        <h6 class="card-title">
                          <a class="text-decoration-none text-dark" href="{{ product.href }}">{{ product.description }}</a>
                        </h6>
                      </div>
                      <div class="mt-auto w-100 pt-2">
                        <p class="card-text text-muted text-right">
                          from <span class="h6 text-dark">{% if product.price %}
                            {% if not product.special %}
                            {{ product.price }}
                            {% else %} <span class="price-new">{{ product.special }}</span> <span class="price-old">{{ product.price }}</span> {% endif %}
                            {% endif %}</span>
                        </p>
                      </div>
                    </div>
                  </div>
                </div>



                {% endfor %}
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6 text-left">{{ pagination }}</div>
          <div class="col-sm-6 text-right">{{ results }}</div>
        </div>
        {% endif %}
        {% if not categories and not products %}
        <p>{{ text_empty }}</p>
        <div class="buttons">
          <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
        </div>
        {% endif %}
        {{ content_bottom }}
      </div>
      {{ column_right }}
    </div>
  </div>
</section>
{{ footer }}